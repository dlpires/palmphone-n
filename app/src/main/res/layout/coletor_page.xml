<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Coletor"
        app:titleTextColor="@android:color/background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/nameUser"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:elevation="0dp"
            android:ems="10"
            android:enabled="false"
            android:hint="Nome do professor"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray" />

        <Spinner
            android:id="@+id/spinnerSala"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.21" />

        <Spinner
            android:id="@+id/spinnerDisciplina"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.21" />

        <Spinner
            android:id="@+id/spinnerAula"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.21"
            android:entries="@array/spinner_aulas"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/formMenu"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginBottom="15dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonColetar"
            android:layout_width="348dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary"
            android:onClick="pageColeta"
            android:text="Coletar dados"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonFinalizar"
            android:layout_width="348dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="0.04"
            android:background="@color/colorPrimary"
            android:text="Finalizar"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
