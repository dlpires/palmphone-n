<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:elevation="0dp"
            android:minHeight="57dp"
            android:theme="?attr/actionBarTheme"
            app:title="PalmPhone"
            app:titleTextColor="@android:color/black"/>

    <LinearLayout
            android:id="@+id/formMenu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

        <Button
                android:id="@+id/buttonPerfil"
                android:layout_width="348dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:onClick="pagePerfil"/>

        <Button
                android:id="@+id/buttonColeta"
                android:layout_width="348dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="0.04"
                android:background="@color/colorPrimary"
                android:text="Iniciar coleta"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:onClick="pageColetor"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/formSync"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.04"
            android:orientation="vertical"
            android:weightSum="1">

        <Button
                android:id="@+id/buttonSync"
                android:layout_width="348dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@color/Sync"
                android:text="Sincronizar"
                android:onClick="sincronizarFirebase"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/formLogout"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.04"
            android:orientation="vertical"
            android:weightSum="1">

        <Button
                android:id="@+id/buttonSair"
                android:layout_width="348dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_red_dark"
                android:text="Sair"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:onClick="botaoLogout"/>
    </LinearLayout>

</LinearLayout>
